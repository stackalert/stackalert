<div class="new-session bg-dark pt-5 text-white text-center text-md-left">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>Log In to Stack Alert</h1>
        <div class="row">
          <div class="col-12 col-md-3">
            <hr class="bg-info">
          </div>
        </div>
        <p class="lead">You'll be taken to GitHub, Bitbucket, or Google to authenticate.</p>
        <br />
        <p class="text-muted">
          By logging in, you are agreeing to our <%= link_to "Terms of Service", page_path("terms-of-service") %> and
          <%= link_to "Privacy Policy", page_path("privacy-policy") %>. We ask only for read access.
        </p>
      </div>
      <div class="col-md-6 col-lg-5 offset-lg-1">
        <h4>Start Checking</h4>
        <div class="btn-group-vertical btn-group-lg mt-4" role="group" aria-label="Sign In">
          <a class="btn btn-primary mt-4" href="/auth/github">
            <%= fa_icon "github", text: "Log In with Github" %>
          </a>
          <a class="btn btn-success mt-4" href="/auth/bitbucket">
            <%= fa_icon "bitbucket", text: "Log In with Bitbucket" %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
